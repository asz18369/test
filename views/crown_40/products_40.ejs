<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crown Clothing</title>
    <link rel="stylesheet" href="/crown_40/css/style.css">
</head>

<body>
    <div class="header">
        <a href="" class="logo-container">
            <img src='/crown_40/assets/crown.svg' />
        </a>
        <div class="options">
            <a href="/crown_40/shop_40" class="option">Shop</a>
            <a href="/signin" class="option">Sign In</a>
            <div class="cart-icon" onclick="cartToggle()">
                <img 
                class="shopping-icon" 
                src="/crown_40/assets/shopping-bag.svg" 
                alt=""
                />
            </div>
            <div class="cart-dropdown">
                <div class="cart-items">
                    <div class="cart-item">
                        <img src="https://i.ibb.co/QdJwgmp/brown-cowboy.png" alt="item">
                        <div class="item-details">
                            <span class="name">Brown Cowboy</span>
                            <span class="price">4 * $35</span>
                        </div>
                    </div>
                    <div class="cart-item">
                        <img src="https://i.ibb.co/mJS6vz0/blue-jean-jacket.png" alt="item">
                        <div class="item-details">
                            <span class="name">Blue Jean Jacket</span>
                            <span class="price">1 * $90</span>
                        </div>
                    </div>
                    <button class="custom-button">GO TO CHECKOUT</button>
                </div>
            </div>
        </div>
    </div>


    <div class="shop-page">
        <h2 style="text-align: center; margin-bottom: 15px ;">
            <%= title.toUpperCase() %> -- <%= name %> <%= id %>
        </h2>
            <div class="collection-page">
                <div class="items">
                <% data.forEach(item => { %>
                <div class="collection-item">
                    <img class="image" src="<%= item.remote_url %>" />
                        <div class="collection-footer">
                        <span class="name"><%= item.name %></span>
                        <span class="price"><%= item.price %></span>
                    </div>
                    <button class="custom-button">Add to Cart</button>
                </div>
                <% }); %>
            </div>
        </div>
    </div>

    <script>
        function cartToggle() {
            p = document.querySelector('.cart-dropdown');
            p.classList.toggle("show");
        }
    </script>
</body>
</html>